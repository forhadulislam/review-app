<div class="main-content">
    <div class="row">
    
        <div class="large-12 columns">
        
            <h2 class="search-heading">Search results for: <span class="thin"> <%= @query %> </span></h2>
            
            <div class="large-12">
                <div class="panel inner-search">
                    
                    <form method="get" action="/review/search">
                        <div class="large-8 large-centered columns">
                            <div class="row collapse">
                                
                                <div class="large-10 columns">
                                  <input type="text" value="<%= @query %>" name="q" required placeholder="Search by keyword">
                                </div>
                                <div class="large-2 columns">
                                  <button class="button postfix">Search</button>
                                </div>
                               
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
            
            
            <% @reviews.each do |review| %>
                <div class="panel">
                    <div class="row">
                        <div class="large-12 medium-12 small-12 columns revs">
                            <div class="large-2 medium-2 small-12 columns">
                                <img class="responsive" src="<%= review.image %>" alt="<%= review.title %>">
                                
                            </div>
                            <div class="large-2 medium-2 small-12 columns text-center">
                                <small>Price</small>
                                <h3>$<%= review.lowest_price %></h3>
                                <a href="/<%= review.slug %>" class="small">Read review</a>
                            </div>
                            <div class="large-6 medium-6 small-12 columns">
                                <h3> <a href="/<%= review.slug %>"> <%= review.title %> </a></h3>
                                <p>
                                    <%=strip_tags review.short_description %>
                                </p>
                            </div>
                            
                            <div class="large-2 medium-2 small-12 columns text-center">
                                
                                <div class="our-score">
                                    <h3 class="score"><i class="fa fa-star"></i> <%= review.score %></h3>
                                    <div class="bottom">Our score</div>
                                </div>
                                
                                <a href="/go/offer/<%= review.id %>" class="radius button expand" target="_blank">Visit site</a>
                            </div>
                            
                        </div>
                        <div class="rev-cat-bottom">
                            <div class="large-3 medium-3 small-12 columns text-center">
                                <a href="/category/<%= review.category.slug %>"><%= review.category.title %></a> > 
                                <a href="/<%= review.category.slug %>/<%= review.sub_category.slug %>"><%= review.sub_category.title %></a>
                            </div>
                            <div class="large-3 medium-3 small-12 columns text-center">
                                Price : <%= review.price %>
                            </div>
                            <div class="large-3 medium-3 small-12 columns text-center">
                                Features : <%= review.features %>
                            </div>
                            <div class="large-3 medium-3 small-12 columns text-center">
                                Support : <%= review.support %>
                            </div>
                        </div>
                        
                    </div>
                </div>
            <% end %>
        </div>
    
    </div>
</div>