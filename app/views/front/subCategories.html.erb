<div class="main-content sub-category">
    <div class="row">
    
        <div class="large-12 columns">
            <ul class="breadcrumbs">
              <li><a href="/">Home</a></li>
              <li><a href="/category/<%= @category.slug %>"><%= @category.title %></a></li>
              <li class="current"><a href="#"><%= @subCategory.title %></a></li>
            </ul>
            
            <h2 class="subcat-heading">Top <span class="thin"> <%= @subCategory.title %> </span> Reviews</h2>
            <div class="subcat-review-list">
                <% @reviews.each_with_index  do |review, index| %>
                    <div class="panel">
                        <div class="row">
                            <div class="large-12 medium-12 small-12 columns revs">
                                <h3 class="text-center title">
                                    <a href="/<%= review.slug %>">
                                        <%= index + 1 %>. <%= review.title %>
                                    </a>
                                </h3>
                                
                                <div class="large-2 medium-2 small-12 columns">
                                    <a href="/go/offer/<%= review.id %>" target="_blank">
                                        <img class="responsive" src="<%= review.image %>" alt="<%= review.title %>">
                                    </a>
                                </div>
                                
                                <div class="large-2 medium-2 small-12 columns text-center">
                                    <h5>Price</h5>
                                    <h3 class="price">$<%= review.lowest_price %></h3>
                                    <a href="/<%= review.slug %>" class="small"><span class="label success">Read review</span></a>
                                </div>
                                
                                <div class="large-6 medium-6 small-12 columns">
                                    <p class="description">
                                        <%=strip_tags review.short_description %>
                                    </p>
                                </div>
                                
                                <div class="large-2 medium-2 small-12 columns text-center">
                                    
                                    <div class="our-score">
                                        <h3 class="score"><i class="fa fa-star"></i> <%= review.score %></h3>
                                        <div class="bottom">Our score</div>
                                    </div>
                                    
                                    <a href="/go/offer/<%= review.id %>" class="radius button expand" target="_blank">Visit site</a>
                                </div>
                                
                            </div>
                            <div class="rev-cat-bottom">
                                <div class="large-3 medium-3 small-12 columns text-center">
                                    <a href="/go/offer/<%= review.id %>" target="_blank">Visit site</a>
                                </div>
                                <div class="large-3 medium-3 small-12 columns text-center">
                                    Price score : <%= review.price %>
                                </div>
                                <div class="large-3 medium-3 small-12 columns text-center">
                                    Features score : <%= review.features %>
                                </div>
                                <div class="large-3 medium-3 small-12 columns text-center">
                                    Support score : <%= review.support %>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    
    </div>
</div>